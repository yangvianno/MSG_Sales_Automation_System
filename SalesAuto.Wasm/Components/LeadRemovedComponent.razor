<h3>Lead Removed</h3>

<div class="row">
    <div class="col"></div>
    <div class="col">
                <label for="nam">Năm</label>
                <input id="nam" type="number" @bind-value="nam" />
                <button class="btn btn-success" @onclick="@(async()=> await loadList())"> load </button>       
    </div>
    <div class="col">
        <button class="btn btn-success" @onclick="@(async()=> await SaveList())"> Save </button>
    </div>
</div>
<div class="row">
    <div class="col">
        @if (listLeadRemove == null)
        {
            <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">...</span>
            </div>
        }
        else
        {
            <table class="table">
                <thead>
                    <tr>
                        <td>
                            Tháng
                        </td>
                        <td>
                            Số lượng
                        </td>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in listLeadRemove)
                    {
                        <tr> <td>@item.Thang</td>
                        <td>
                            <input type="number" @bind-value="item.SoLuong"/>
                        </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
</div>

</div>
